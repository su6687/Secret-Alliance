{
  "name": "secret-alliance-fhevm-game",
  "version": "1.0.0",
  "description": "基于FHEVM的隐私保护区块链游戏 - 隐秘联盟",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.js --network testnet",
    "node": "hardhat node",
    "frontend:install": "cd frontend && npm install",
    "frontend:start": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "dev": "concurrently \"npm run node\" \"npm run frontend:start\"",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix"
  },
  "keywords": [
    "blockchain",
    "fhevm",
    "privacy",
    "gaming",
    "ethereum",
    "solidity",
    "fhe",
    "zama",
    "web3"
  ],
  "author": "Secret Alliance Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.0.0",
    "hardhat": "^2.19.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "fhevm": "^0.4.0",
    "fhevm-core-contracts": "^0.4.0",
    "dotenv": "^16.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/secret-alliance/fhevm-game.git"
  },
  "bugs": {
    "url": "https://github.com/secret-alliance/fhevm-game/issues"
  },
  "homepage": "https://github.com/secret-alliance/fhevm-game#readme"
}